---
import "@fontsource-variable/montserrat/wght-italic.css";

import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

import type { Preload } from "@/types/Preload";

interface Props {
	title: string;
	canonical: string;
	metaDescription: string;
	metaImg: string;
	preLoad?: Array<Preload>;
}

const { title, canonical, metaDescription, metaImg, preLoad } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<!-- Favicons -->
		<link rel="icon" href="/images/logo/favicon.png" type="image/png" />
		<title>{title}</title>

		<!-- SEO -->
		<link rel="canonical" href={canonical} />
		<!-- GOOGLE -->
		<meta name="description" content={metaDescription} />
		<meta http-equiv="Cache-Control" content="no-cache" />
		<meta http-equiv="Expires" content="Mon, 01 Jul 1970 00:00:00 GMT" />
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />
		<!-- FACEBOOK OPEN GRAPH TAGS -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={metaDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonical} />
		<meta property="og:image" content={metaImg} />
		<!-- Twitter -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={metaDescription} />
		<meta name="twitter:url" content={canonical} />
		<meta name="twitter:image" content={metaImg} />
		<!-- preconnect para Google Recaptcha -->
		<link rel="preconnect" href="https://www.google.com" />
		<link rel="preconnect" href="https://www.gstatic.com" crossorigin />
		{
			preLoad?.map(({ href, as, type }) => (
				<link rel="preload" {as} {href} {type} />
			))
		}
	</head>
	<body
		class="font-montserrat scrollbar scrollbar-w-3 scrollbar-thumb-rounded-[0.25rem] scrollbar-track-gray-200 scrollbar-thumb-gray-400"
	>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	/*recaptcha*/
	.grecaptcha-badge {
		width: 70px !important;
		overflow: hidden !important;
		transition: all 0.3s ease !important;
		left: 4px !important;
		z-index: 100;
	}

	.grecaptcha-badge:hover {
		width: 256px !important;
	}
</style>
