---
interface Props {
	title: string;
	hasBullets?: boolean;
}

const { title, hasBullets = false } = Astro.props;
---

<div class="overflow-hidden">
	<!-- Header -->
	<div class="bg-linear-to-r from-rojo-deg-1 from-40% to-black py-4 px-4 xl:px-8">
		<h3 class="text-lg sm:text-xl lg:text-2xl xl:text-3xl font-light italic text-white text-center">
			{title}
		</h3>
	</div>
	
	<!-- Body -->
	<div class:list={[
		"bg-black/60 py-4 lg:py-6 xl:py-8 px-4 lg:px-8 text-white",
		hasBullets ? "text-left" : "text-center"
	]}>
		<slot />
	</div>
</div>
