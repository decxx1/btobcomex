---
import PhaseCard from "./PhaseCard.astro";

// Datos de las fases
const phase1Products = `Electrodomésticos del hogar.<br>
Productos electrónicos de consumo e información.<br>
Automatización industrial y manufactura inteligente.<br>
Equipos de procesamiento de maquinaria.<br>
Máquinas de energía y potencia eléctrica.<br>
Maquinaria agrícola, de construcción. <br>
Vehículos.<br>
Repuestos de vehículos. <br>
Nuevos vehículos de energía y movilidad inteligente. <br>
Motocicletas.<br>
Bicicletas. <br>
Recursos de nueva energía. <br>
Iluminación.<br>
Productos y equipos eléctricos y electrónicos. <br>
Nuevos materiales y productos químicos.<br>
Herramientas. <br>
Ferretería`;

const phase2Products = `Cerámica general.<br>
Vajilla y utensilios de cocina.<br>
Artículos para el hogar.<br>
Cristalería. <br>
Decoraciones del hogar.<br>
Productos de jardinería. Productos de festival.<br>
Regalos y premios. Relojes y óptica.<br>
Cerámica artística.<br>
Productos de tejido, ratán y hierro.<br>
Materiales de construcción y decoración.<br>
Equipos sanitarios y de baño.<br>
Muebles. Decoración de piedra/hierro y equipos de spa al aire libre.`;

const phase3Products = `Juguetes.<br>
Ropa para niños, bebés y maternidad.<br>
Ropa para niños.<br>
Ropa y prendas deportivas. Ropa para hombre y mujer.<br>
Productos de piel, cuero, plumón y relacionados.<br>
Materias primas textiles y telas.<br>
Zapatos. Textiles para el hogar.<br>
Alfombras y tapices.<br>
Productos de salud, medicina y dispositivos médicos.<br>
Alimentos.<br>
Productos de cuidado y aseo personal.<br>
Accesorios y artículos de moda.<br>
Bolsos y maletas.<br>
Suministros de oficina.<br>
Productos para mascotas y alimentos.<br>
Productos de deporte, viaje y recreación.`;
---

<section class="pb-16 lg:pb-24 pt-8 xl:pt-2 2xl:pt-8 bg-white">
	<!-- Header -->
	<header class="bg-semi-black py-12 mb-14">
		<section class="container mx-auto px-4 sm:px-6 xl:px-8 flex flex-col md:flex-row items-center md:justify-between gap-6">
			<h2 class="max-sm:text-center text-lg md:text-xl xl:text-2xl 2xl:text-3xl text-white italic">
				<span class="font-light">Fechas y fases de la</span><br />
				<span class="font-bold">Feria de Cantón 2026</span>
			</h2>

			<!-- Tabs -->
			<div class="flex gap-4">
				<button 
					id="tab-primavera"
					class="tab-btn px-4 sm:px-6 py-2 sm:py-3 font-bold text-lg transition-all bg-verde-deg-2 text-white"
					data-tab="primavera"
				>
					ABRIL
				</button>
				<button 
					id="tab-otono"
					class="tab-btn px-4 sm:px-6 py-2 sm:py-3 font-bold text-lg transition-all bg-crema-deg-1 text-verde-deg-1"
					data-tab="otono"
				>
					OCTUBRE
				</button>
			</div>
		</section>
	</header>
	<div class="container mx-auto px-4 md:px-12">
		
		<!-- Primavera Content -->
		<div id="content-primavera" class="tab-content">
			<!-- Season Title -->
			<div class="bg-verde-deg-2 py-4 px-6 text-center mb-4">
				<h3 class="text-2xl font-bold text-white tracking-wider">Abril</h3>
			</div>

			<PhaseCard 
				phase="Fase 1" 
				dates="15 al 19 de abril" 
				products={phase1Products} 
				variant="spring" 
			/>
			<PhaseCard 
				phase="Fase 2" 
				dates="23 al 27 de abril" 
				products={phase2Products} 
				variant="spring" 
			/>
			<PhaseCard 
				phase="Fase 3" 
				dates="1 al 5 de mayo" 
				products={phase3Products} 
				variant="spring" 
			/>
		</div>

		<!-- Octubre Content -->
		<div id="content-otono" class="tab-content hidden">
			<!-- Season Title -->
			<div class="bg-crema-deg-1 py-4 px-6 text-center mb-4">
				<h3 class="text-2xl font-bold text-verde-deg-1 tracking-wider">Octubre</h3>
			</div>

			<PhaseCard 
				phase="Fase 1" 
				dates="15 al 19 de octubre" 
				products={phase1Products} 
				variant="autumn" 
			/>
			<PhaseCard 
				phase="Fase 2" 
				dates="23 al 27 de octubre" 
				products={phase2Products} 
				variant="autumn" 
			/>
			<PhaseCard 
				phase="Fase 3" 
				dates="31 de octubre al 4 de noviembre" 
				products={phase3Products} 
				variant="autumn" 
			/>
		</div>
	</div>
</section>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const tabButtons = document.querySelectorAll('.tab-btn');
		const tabContents = document.querySelectorAll('.tab-content');

		tabButtons.forEach(button => {
			button.addEventListener('click', () => {
				const tab = button.getAttribute('data-tab');

				// Hide all contents
				tabContents.forEach(content => {
					content.classList.add('hidden');
				});

				// Show selected content
				document.getElementById(`content-${tab}`)?.classList.remove('hidden');

				// Update button styles
				tabButtons.forEach(btn => {
					if (btn.getAttribute('data-tab') === 'primavera') {
						btn.classList.remove('bg-verde-deg-2');
						btn.classList.add('bg-verde-deg-1', 'text-verde-deg-1');
					} else {
						btn.classList.remove('bg-crema', 'text-verde-deg-1');
						btn.classList.add('bg-crema-deg-1', 'text-verde-deg-1');
					}
				});

				// Highlight active button
				if (tab === 'primavera') {
					button.classList.remove('bg-verde-deg-1', 'text-verde-deg-1');
					button.classList.add('bg-verde-deg-2');
				} else {
					button.classList.remove('bg-crema-deg-1');
					button.classList.add('bg-crema', 'text-verde-deg-1');
				}
			});
		});
	});
</script>
