---
interface Props {
	image: string;
	title: string;
	description: string;
}

const {
	image,
	title,
	description,
} = Astro.props;
---
<div class="flex items-end gap-4 xl:gap-6">
    <img src={image} alt={title} class="size-14 xl:size-16 2xl:size-20" />
    <div>
        <h3 class="font-bold text-semi-black text-xl xl:text-2xl 2xl:text-3xl">{title}</h3>
        <p class="text-semi-black text-lg xl:text-xl 2xl:text-2xl">{description}</p>
    </div>
</div>