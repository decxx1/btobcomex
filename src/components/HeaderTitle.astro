---
interface Props {
	title: string;
	isRed?: boolean;
}

const { title, isRed = false } = Astro.props;
---

<section
	class:list={[
		"relative z-20 bg-linear-to-r  py-12 px-4 md:px-12",
		isRed ? "from-rojo-deg-1 from-40% to-black" : "from-verde-deg-1 via-verde-deg-2 to-white"
	]}
>
	<div class="container mx-auto">
		<h2
			class="text-4xl md:text-6xl font-thin italic text-white tracking-wider"
		>
			{title}
		</h2>
	</div>
</section>
