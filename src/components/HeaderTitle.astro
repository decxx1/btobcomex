---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<section
	class="relative z-20 bg-linear-to-r from-verde-deg-1 via-verde-deg-2 to-white py-12 px-4 md:px-12"
>
	<div class="container mx-auto">
		<h2
			class="text-4xl md:text-6xl font-thin italic text-white tracking-wider"
		>
			{title}
		</h2>
	</div>
</section>
