---

<section class="relative bg-linear-to-t from-crema-deg-1 from-0% to-verde-deg-1 py-16 lg:py-24 overflow-hidden">
	<!-- Arrow Left -->
	<div class="absolute top-0 left-0 w-[30%] sm:w-[60%] lg:w-[40%] pointer-events-none hidden md:block">
		<img
			src="/assets/elements/arrow-left-white.svg"
			alt=""
			class="h-full w-full object-cover object-right opacity-20"
		/>
	</div>

	

	<div class="container mx-auto px-4 md:px-12 relative z-10">
		<!-- Información de Contacto -->
		<div class="text-center mb-16">
			<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-10">
				Información de Contacto
			</h2>

			<div class="space-y-4 max-w-2xl mx-auto font-semibold">
				<!-- Teléfonos -->
				<div class="flex items-center justify-center gap-4">
					<img src="/assets/icons/contact/icon-phone.svg" alt="Teléfono" class="w-6 h-6" />
					<p class="text-white text-lg md:text-xl">
						+54 9 261 4534280 | +54 9 261 5260461
					</p>
				</div>

				<!-- Email -->
				<div class="flex items-center justify-center gap-4">
					<img src="/assets/icons/contact/icon-email.svg" alt="Email" class="w-6 h-6" />
					<a href="mailto:info@btobcomex.com.ar" class="text-white text-lg md:text-xl hover:underline">
						info@btobcomex.com.ar
					</a>
				</div>
			</div>
		</div>

		<!-- Dirección -->
		<div class="text-center mb-16 relative">
			<!-- Arrow Right -->
			<div class="absolute top-0 right-0 w-[30%] sm:w-[60%] lg:w-[40%] pointer-events-none hidden md:block">
				<img
					src="/assets/elements/arrow-right.svg"
					alt=""
					class="h-full w-full object-cover object-top-left opacity-20"
				/>
			</div>
			<h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-8">
				Dirección
			</h2>

			<div class="space-y-6 max-w-3xl mx-auto font-semibold">
				<!-- Chile -->
				<div class="flex items-start justify-center gap-4">
					<img src="/assets/icons/contact/icon-map.svg" alt="Ubicación" class="w-6 h-6 mt-1" />
					<p class="text-white text-lg md:text-xl text-left">
						Oficina en Chile: Los Militares 5620 Oficina 905,<br />
						Las Condes, Región Metropolitana de Santiago.
					</p>
				</div>

				<!-- Argentina -->
				<div class="flex items-start justify-center gap-4">
					<img src="/assets/icons/contact/icon-map.svg" alt="Ubicación" class="w-6 h-6 mt-1" />
					<p class="text-white text-lg md:text-xl text-left">
						Oficina en Argentina: Gibraltar 2825, Godoy Cruz, Mendoza.
					</p>
				</div>
			</div>
		</div>

		<!-- Redes Sociales -->
		<div class="text-center">
			<h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-8">
				Redes sociales
			</h2>

			<div class="flex items-center justify-center gap-6">
				<a 
					href="https://www.linkedin.com/company/btobcomex" 
					target="_blank" 
					rel="noopener noreferrer"
					class="w-14 h-14 flex items-center justify-center hover:bg-white/10 transition-colors"
				>
					<img src="/assets/icons/social/icon-linkedin.svg" alt="LinkedIn" class="w-full h-full" />
				</a>
				<a 
					href="https://www.instagram.com/btobcomex" 
					target="_blank" 
					rel="noopener noreferrer"
					class="w-14 h-14 flex items-center justify-center hover:bg-white/10 transition-colors"
				>
					<img src="/assets/icons/social/icon-instagram.svg" alt="Instagram" class="w-full h-full" />
				</a>
				<a 
					href="https://www.facebook.com/btobcomex" 
					target="_blank" 
					rel="noopener noreferrer"
					class="w-14 h-14 flex items-center justify-center hover:bg-white/10 transition-colors"
				>
					<img src="/assets/icons/social/icon-facebook.svg" alt="Facebook" class="w-full h-full" />
				</a>
				<a 
					href="https://wa.me/5492614534280" 
					target="_blank" 
					rel="noopener noreferrer"
					class="w-14 h-14 flex items-center justify-center hover:bg-white/10 transition-colors"
				>
					<img src="/assets/icons/social/icon-whatsapp.svg" alt="WhatsApp" class="w-full h-full" />
				</a>
			</div>
		</div>
	</div>
</section>
