---
interface Props {
	image: string;
	imageAlt?: string;
	phrases: string[];
	imagePosition?: 'left' | 'right';
}

const { image, imageAlt = "", phrases, imagePosition = 'right' } = Astro.props;

const isImageRight = imagePosition === 'right';
---

<section class="relative py-4 sm:py-8 md:py-16 2xl:py-20">
	<div class:list={[
		"grid grid-cols-1 md:grid-cols-12",
		isImageRight ? "" : "md:grid-flow-col-dense"
	]}>
		<!-- Text Content -->
		<div class:list={[
			"md:col-span-8 lg:col-span-7 flex flex-col justify-start py-2 md:py-12 lg:py-16",
			isImageRight ? "order-2 md:order-1" : "order-2 md:order-2"
		]}>
			<div class="space-y-2 md:space-y-4">
				{phrases.map((phrase) => (
					<p class="pl-4 lg:pl-8 xl:pl-16 bg-linear-to-r from-verde-deg-1 from-10% to-verde-deg-2 text-white py-4 px-4 sm:px-6 text-base sm:text-base md:text-lg lg:text-xl xl:text-2xl font-medium">
						{phrase}
					</p>
				))}
			</div>
		</div>

		<!-- Image -->
		<div class:list={[
			"md:col-span-4 lg:col-span-5 relative min-h-72 sm:min-h-80 md:min-h-[32rem]",
			isImageRight ? "order-1 md:order-2" : "order-1 md:order-1"
		]}>
			<img
				src={image}
				alt={imageAlt}
				class="w-full h-72 sm:h-80 md:h-[32rem] object-cover"
			/>
			<!-- Gradient overlay -->
			<div class:list={[
				"absolute inset-0 pointer-events-none",
			]}></div>
		</div>
	</div>
</section>
